@model Property

@{
    ViewData["Title"] = "Add New Property";
}

<script>
    function previewImage(input, index) {
        const file = input.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                const preview = document.getElementById(`preview-${index}`);
                const placeholder = document.getElementById(`placeholder-${index}`);
                if (preview) {
                    preview.src = e.target.result;
                    preview.style.display = "block";
                }
                if (placeholder) {
                    placeholder.style.display = "none";
                }
            };
            reader.readAsDataURL(file);
        }
    }
</script>

<div class="container mt-5 mb-5">
    <h1 class="mb-5">Add New Property</h1>
    <form method="post" asp-action="AddProperty" asp-controller="Dashboard" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label">Property Images</label>
            <div class="image-uploader-container d-flex flex-wrap">
               @for (var i = 0; i < 3; i++)
                {
                    <div class="image-square">
                        <label for="Image_@i" class="upload-label">
                            <span class="plus-icon" id="placeholder-@i">+</span>
                            <img id="preview-@i" class="preview-image" alt="Preview Image" />
                        </label>
                        <input type="file" id="Image_@i" name="Images" class="image-input" accept="image/*" @if (i == 0) { <text>required</text> } onchange="previewImage(this, @i)" />
                    </div>
                }
            </div> 
            <p class="text-black-50 fw-light fst-italic" style="font-size: 15px;">
                Note: Please upload at least 1 image for the property.
            </p>
        </div>
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input  type="text" id="Name" name="Name" class="form-control" required />
        </div>

        <div class="mb-3">
            <label  asp-for="Description" class="form-label">Description</label>
            <textarea id="Description" name="Description" class="form-control" rows="3" required></textarea>
        </div>

        <div class="mb-3">
            <label  asp-for="Price" class="form-label">Price</label>
            <input type="number" id="Price" name="Price" class="form-control" required />
        </div>

        <div class="mb-3">
            <label  asp-for="Location" class="form-label">Location</label>
            <input type="text" id="Location" name="Location" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary mt-4">Add Property</button>
    </form>
</div>

<style>
    .image-uploader-container {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .image-square {
        width: 120px;
        height: 120px;
        border: 2px dashed #ccc;
        border-radius: 8px;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        cursor: pointer;
        overflow: hidden;
    }

    .image-square:hover {
        background-color: #f5f5f5;
    }

    .upload-label {
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
    }

    .plus-icon {
        font-size: 32px;
        color: #007bff;
        font-weight: bold;
        z-index: 1;
    }

    .image-input {
        position: absolute;
        width: 100%;
        height: 100%;
        opacity: 0;
        cursor: pointer;
        z-index: 2;
    }

    .preview-image {
        display: none;
        width: 100%;
        height: 100%;
        object-fit: cover;
        position: absolute;
        top: 0;
        left: 0;
    }
</style>
