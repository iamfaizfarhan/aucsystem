@model PlaceBidViewModel

@{
    ViewData["Title"] = $"Place Bid - {Model?.PropertyName ?? "Property not found"}";
}

<div class="mt-5">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center">
            @TempData["ErrorMessage"]
        </div>
    }

    <h2 class="mb-4">Place a new bid ðŸ’°</h2>

    <div class="card p-4 shadow-sm">
        <h3>@(Model?.PropertyName ?? "Property not found")</h3>
        <p>Current Price: <strong>@(Model?.CurrentPrice.ToString("C") ?? "N/A")</strong></p>

            <form action="/Dashboard/PlaceBid" method="post">
            <input type="hidden" asp-for="PropertyId" />

            <div class="mb-3">
                <label for="BidAmount" class="form-label">Your Bid Amount</label>
                <input type="number" asp-for="BidAmount" class="form-control" placeholder="Enter your bid" required />
                <span asp-validation-for="BidAmount" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-around mt-4">
                <button type="submit" class="btn btn-primary">Place Bid</button>
                <a href="/Dashboard/PropertyPage/@Model?.PropertyId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
