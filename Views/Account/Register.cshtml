@using Aucsystem.Controllers;
@model RegisterViewModel;

@{
    ViewData["Title"] = "Register";
}

<div class="d-flex flex-column justify-content-center align-items-center">
    <h1 class="text-center mb-4" style="font-size: 38px; font-weight: 700; margin-top: 40px;">Register</h1>
    <div class="" style="width: 100%; max-width: 400px;">
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="FullName" class="form-label">Full Name</label>
                    <input asp-for="FullName" class="form-control" placeholder="Provide your first and last name" required />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Provide your email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Type a strong password" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Phone" class="form-label">Phone</label>
                    <input asp-for="Phone" class="form-control" placeholder="Provide your phone number" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="UserType" class="form-label">I'm a</label>
                    <select asp-for="UserType" class="form-select" required>
                        <option value="">Select User Type</option>
                        <option value="Buyer">Buyer</option>
                        <option value="Seller">Seller</option>
                    </select>
                    <span asp-validation-for="UserType" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Register</button>
            </form>
            <div class="mt-3 text-center">
                Already have an account? <a href="/Account/Login" class="text-primary">Login</a>
            </div>
        </div>
    </div>
</div>
