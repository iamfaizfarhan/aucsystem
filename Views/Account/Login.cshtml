@using Aucsystem.Controllers;
@model LoginViewModel;

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex flex-column justify-content-center align-items-center">
    <h1 class="text-center mb-4" style="font-size: 38px; font-weight: 700; margin-top: 40px;">Login</h1>
    <div class="" style="width: 100%; max-width: 400px;">
        <div class="card-body"></div>
            <form method="post" >
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Provide your email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Your strong password" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Login</button>
            </form>
            <div class="mt-3 text-center">
                Donâ€™t have an account? <a href="/Account/Register" class="text-primary">Register</a>
            </div>
        </div>
    </div>
</div>
